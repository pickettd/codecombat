  //-   span.spr :
  //-   = view.prepaids.totalRedeemers()
  //- .small-details
  //-   span(data-i18n='teacher.unenrolled_students')
  //-   span.spr :
  //-   = (view.members.length - view.prepaids.totalRedeemers())
